{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es2017.object",
      "es6",
      "es7",
      "dom",
      "es2018.promise"
    ],
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}